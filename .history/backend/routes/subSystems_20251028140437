const express = require("express");
const router = express.Router();
const authenticateToken = require("../middleware/auth");
// const AuditLog = require("../models/AuditLog");
const SubSystem = require("../models/SubSystem");
const upload = require("../middleware/uploadforSubsheet"); // middleware for file upload
const path = require("path");
const generatePdfFromOffice = require("../utils/generatePdfFromOffice"); // utility function to generate PDF from Excel

// Create new subsystem with file upload middleware
router.post(
  "/with-files",
  authenticateToken,
  upload.fields([{ name: "originalFile" }, { name: "pdfFile" }]),
  async (req, res) => {
    try {
      const {
        systemId,
        name,
        code,
        room,
        building,
        description,
        createdbyUserId,
      } = req.body;

      //       // Get the original file path and generate a PDF file path

      const originalFilePath = req.file.path;
      const filenameWithoutExt = path.basename(
        originalFilePath,
        path.extname(originalFilePath)
      );
      const pdfFilePath = path.join(
        "uploads/subSys_technical_sheets_pdf",
        `${filenameWithoutExt}.pdf`
      );
      // await generatePdfFromOffice(originalFilePath, pdfFilePath);

      if (!systemId || !name) {
        return res
          .status(400)
          .json({ error: "systemId and name are required" });
      }

      const subSystem = await SubSystem.create({
        systemId,
        name,
        code,
        description,
        createdbyUserId: req.user.userId,
        room,
        building,
        originalPathFile,
        pdfPathFile,
      });

      res.status(201).json(subSystem);
    } catch (err) {
      res.status(500).json({ error: err.message });
    }
  }
);

