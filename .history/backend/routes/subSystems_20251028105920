const express = require("express");
const router = express.Router();
const authenticateToken = require("../middleware/auth");
// const AuditLog = require("../models/AuditLog");
const SubSystem = require("../models/SubSystem");
const upload = require("../middleware/upload"); // middleware for file upload
const path = require("path");

// Create new subsystem with file upload middleware
router.post(
  "/with-files",
  authenticateToken,
  upload.fields([{ name: "originalFile" }, { name: "pdfFile" }]),
  async (req, res) => {
    try {
      const {
        systemId,
        name,
        code,
        room,
        building,
        description,
        createdbyUserId,
      } = req.body;

      // Get file paths
      const originalPathFile = req.files?.originalFile
        ? req.files.originalFile[0].path
        : null;
      const pdfPathFile = req.files?.pdfFile ? req.files.pdfFile[0].path : null;

      if (!systemId || !name) {
        return res
          .status(400)
          .json({ error: "systemId and name are required" });
      }

      const subSystem = await SubSystem.create({
        systemId,
        name,
        code,
        description,
        createdbyUserId,
        room,
        building,
        originalPathFile,
        pdfPathFile,
      });

      res.status(201).json(subSystem);
    } catch (err) {
      res.status(500).json({ error: err.message });
    }
  }
);

